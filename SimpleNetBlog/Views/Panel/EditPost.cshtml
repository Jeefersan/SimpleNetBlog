@model Post



<form asp-controller="Panel" asp-action="EditPost" method="post" enctype="multipart/form-data">
    
    <input asp-for="PostId" value="@Model.PostId" type="hidden">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="fom-control">
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <input asp-for="Content" class="fom-control">
        <span class="text-danger" asp-validation-for="@Model.Content"/>
    </div>

    <div class="btn-group">
        <button class="btn btn-primary" asp-action="Index">Cancel</button>
        <input type="submit" class="btn btn-danger" value="Save Changes"/>
    </div>
</form>