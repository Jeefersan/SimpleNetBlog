@model Post

<form>
    <div class="form-group">
        <label asp-for="@Model.Title">Title</label>
        <input asp-for="@Model.Title" class="fom-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Content">Content</label>
        <input asp-for="@Model.Content" class="fom-control">
        <span class="text-danger" asp-validation-for="@Model.Content"/>
    </div>
    
    <div class="btn-group">
        <button class="btn btn-primary">Cancel</button>
        <button type="submit" class="btn btn-danger">Save changes.</button>
    </div>
</form>